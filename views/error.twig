{% extends 'layout.twig' %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="col alert alert-danger">
        <h1>{{ message }}</h1>
      </div>
    </div>
    <div class="row">
      <div class="col alert alert-warning">
        <h2>{{ error.status }}</h2>
        <p>{{ error.stack }}</p>
      </div>
    </div>
  </div>
{% endblock %}
